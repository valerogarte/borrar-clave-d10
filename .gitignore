# --------------------------------------------------
# Drupal 11 - .gitignore (estructura recommended-project)
# --------------------------------------------------

# Dependencias gestionadas por Composer
# /vendor/*
# !/vendor/simplesamlphp/
# El binario de Composer (si existe)
composer.lock

# Archivos locales y temporales
/.ddev/
.idea/
/.vscode/
/.env
/.env.local
/.DS_Store
/.sass-cache
/.cache/
Thumbs.db

# Configuraciones de entorno
/web/sites/*/settings.local.php
/web/sites/*/services.local.yml
/web/sites/*/development.services.yml
/web/sites/simpletest
/web/sites/*/files/php/twig
/web/sites/*/files/styles
/web/sites/*/files/js
/web/sites/*/files/css
/web/sites/*/files/php
/web/sites/*/files/advagg_*
/web/sites/*/files/imagecache

# Archivos generados por Drupal
/web/sites/*/files/*
!/web/sites/*/files/.htaccess

# Cachés y logs
/web/sites/*/files/tmp
/web/sites/*/files/logs
/web/sites/default/files/php
/private/
/tmp/

# Configuración exportada (si se usa Config Split)
# Ajusta si tu carpeta de sync está fuera de web/
# /config/sync/*

# Traducciones compiladas
/web/core/translations/*

# Módulos o temas contrib descargados manualmente
/web/modules/contrib/
/web/themes/contrib/
/web/profiles/contrib/

# Módulos o temas personalizados (sí deben versionarse)
!/web/modules/custom/
/web/modules/custom/**/.DS_Store
!/web/themes/custom/
/web/themes/custom/**/.DS_Store

# Ficheros generados por herramientas de desarrollo
npm-debug.log
yarn-error.log
package-lock.json
node_modules/

!.ddev